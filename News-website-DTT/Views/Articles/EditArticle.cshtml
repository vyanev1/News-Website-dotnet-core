@model Article
@{
    ViewData["Title"] = "Edit Article";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    form {
        display: flex;
        margin: auto;
        padding: 10px 20px;
        width: 100%;
        min-height: 400px;
        background-color: lightgoldenrodyellow;
        border: solid 1px black;
        border-radius: 10px;
        box-shadow: rgba(0,0,0,0.4) 0px 0px 10px;
    }

    td {
        padding: 10px;
    }

    table {
        margin: auto;
        width: 90%;
    }

    input, textarea {
        padding: 5px;
        text-align: left;
        width: 100%;
        border: solid 1px black;
        border-radius: 5px;
        box-shadow: rgba(0,0,0,0.4) 0px 0px 10px;
    }

    #inputSubtitle {
        min-height: 100px;
    }

    #inputContent {
        min-height: 400px;
    }
</style>
<h1 class="title">Edit Article</h1>
<form asp-action="Update" asp-controller="Articles">
    <input asp-for="Id" value="@Model.Id" type="hidden">
    <table>
        <tr>
            <td>
                <label asp-for="Title"></label>
                <input asp-for="Title" value="@Model.Title" />
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="Subtitle"></label>
                <textarea id="inputSubtitle" asp-for="Subtitle" value="@Model.Subtitle"></textarea>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="Content"></label>
                <textarea id="inputContent" asp-for="Content" value="@Model.Content"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit">Save Changes</button>
                <button asp-action="AdminHome" asp-controller="Home">Cancel</button>
            </td>
        </tr>
    </table>
</form>
<a href="@Url.Action("Delete","Articles",Model)">Delete This Article</a>

